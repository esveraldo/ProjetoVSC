@model ProjetoVSC.Models.Entities.Funcionario

<h2>Cadastro de funcionário</h2>

<form asp-action="Salvar">
    <div class="form-group">
        <input type="text" class="form-control" asp-for="Cpf" placeholder="Nome">
    </div>
    <div class="form-group">
        <input type="number" class="form-control" asp-for="Salario" placeholder="Salário">
    </div>
    <button class="btn btn-primary">Cadastrar</button>
</form>